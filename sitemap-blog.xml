---
layout: null
permalink: /sitemap-blog.xml
---
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>https://shabito.net/blog/</loc>
        <lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.9</priority>
    </url>
    {% for post in site.posts %}
    <url>
        <loc>https://shabito.net{{ post.url }}</loc>
        <lastmod>{% if post.updated %}{{ post.updated | date: "%Y-%m-%d" }}{% else %}{{ post.date | date: "%Y-%m-%d" }}{% endif %}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
        {% if post.preview_image and post.preview_image != "" %}
        <image:image>
            <image:loc>https://shabito.net{{ post.preview_image }}</image:loc>
            <image:title>{{ post.title }}</image:title>
            <image:caption>{{ post.description }}</image:caption>
        </image:image>
        {% endif %}
    </url>
    {% endfor %}
</urlset>
